<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etname"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="184dp"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:hint="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etyear"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:hint="Year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etname" />

    <EditText
        android:id="@+id/etsize"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:hint="T-shirt Size"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etyear" />

    <EditText
        android:id="@+id/etprintname"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:hint="Name You Want To PRint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etsize" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="223dp"
        android:layout_height="47dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="108dp"
        android:text="Save Data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etprintname" />
</androidx.constraintlayout.widget.ConstraintLayout>